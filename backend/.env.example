# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/sahhafood

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - CHANGE THESE IN PRODUCTION
JWT_ACCESS_SECRET=your_access_secret_here_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_change_in_production_min_32_chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OTP - CHANGE IN PRODUCTION
OTP_SECRET=your_otp_secret_here_change_in_production_min_32_chars
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Infobip SMS/WhatsApp
INFOBIP_API_KEY=your_infobip_api_key
INFOBIP_BASE_URL=https://your-infobip-base-url.api.infobip.com
INFOBIP_WHATSAPP_SENDER=your_whatsapp_sender
INFOBIP_SMS_SENDER=your_sms_sender
INFOBIP_WHATSAPP_TEMPLATE=your_template_name

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Sentry (Optional)
SENTRY_DSN=
